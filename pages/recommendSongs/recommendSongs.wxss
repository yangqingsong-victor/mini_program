/* pages/recommendSongs/recommendSongs.wxss */

 .header {
    position: relative;
    width: 100%;
    height: 300rpx;
    }

 .header image{
    width: 100%;
    height: 100%
    }

 .header .date {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -150rpx;
    margin-top: -50rpx;

    width: 300rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
 }

.recommendList{
    position: relative;
    margin-top: -20rpx;
    padding: 0 20rpx;
    border-radius: 30rpx;
    background: #fff;
}
 .recommendList .nav text{
    height: 80rpx;
    line-height: 80rpx;
 }

 .recommendList .nav .changeMore{
     float: right;
 }



 /*推荐歌单*/
.recommendScroll{
    height: calc(100vh - 380rpx);
}

.recommendScroll .recommendItem{
    display: flex;
    margin-bottom: 10rpx;
}

.recommendScroll .recommendItem image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}

.recommendScroll .recommendItem .musicInfo {
    position: relative;
    /*父元素设置flex,子元素自动编程block*/
    display: flex;
    flex-direction: column;
    max-width: 500rpx;
}

.recommendScroll .recommendItem .musicInfo text{
    margin-left: 10rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;

    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.recommendScroll .recommendItem .iconfont{
    position: absolute;
    height: 80rpx;
    width: 80rpx;
    line-height: 80rpx;
    display: inline-block;
    right: 0;
    text-align: right;
}